@Scripts.Render("~/bundles/jquery")
<script>
    jQuery(document).ready(function () {
        $(".glyphicon").click(function () {
            $(this).attr("data-click", "clicked");
            $(this).css("color", "white");
        });

        $(".glyphicon").mouseover(function () {
            if (!($(this).attr("data-click"))) {
                $(this).css("color", "white");
            }
        }).mouseout(function () {
            if (!($(this).attr("data-click"))) {
                $(this).css("color", "#333");
            }
        });
    });
</script>
